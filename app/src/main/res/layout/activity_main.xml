<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#2E6DD6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </View>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src=""
        app:layout_constraintTop_toTopOf="@id/h_gl_4"
        app:layout_constraintBottom_toBottomOf="@id/h_gl_30"
        app:layout_constraintStart_toStartOf="@id/v_gl_5"
        app:layout_constraintEnd_toEndOf="@id/v_gl_95">

    </ImageView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gl_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gl_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_gl_95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".95">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gl_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".3">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_gl_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".04">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="44dp"
        android:background="@color/black"
        android:elevation="10dp"
        android:gravity="center|bottom"
        android:text="Show\nAttendence"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/v_gl_95"
        app:layout_constraintStart_toStartOf="@+id/v_gl_5"
        app:layout_constraintTop_toTopOf="@+id/h_gl_30" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton2"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:background="@color/black"
        android:elevation="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center|bottom"
        android:text="Mark\nAttendence"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/materialButton"
        app:layout_constraintEnd_toStartOf="@+id/materialButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/v_gl_5"
        app:layout_constraintTop_toTopOf="@+id/materialButton"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton4"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="44dp"
        android:background="@color/black"
        android:elevation="10dp"
        android:gravity="center|bottom"
        android:text="home\nWork"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialButton"
        app:layout_constraintEnd_toStartOf="@+id/v_gl_95"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/materialButton"
        app:layout_constraintTop_toTopOf="@+id/h_gl_30"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:gravity="center|left"
        android:text="Galley"
        app:layout_constraintEnd_toStartOf="@+id/v_gl_50"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/v_gl_5"
        app:layout_constraintTop_toBottomOf="@+id/materialButton2" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center|left"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="Pay Fee"
        app:layout_constraintEnd_toStartOf="@+id/v_gl_50"
        app:layout_constraintStart_toStartOf="@+id/v_gl_5"
        app:layout_constraintTop_toBottomOf="@+id/materialButton3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Notice"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:gravity="center|left"
        android:layout_marginLeft="10dp"
        android:text="Notice"
        app:layout_constraintEnd_toStartOf="@+id/v_gl_95"
        app:layout_constraintStart_toStartOf="@+id/v_gl_50"
        app:layout_constraintTop_toBottomOf="@+id/materialButton4" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center|left"
        android:text="About"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toStartOf="@+id/v_gl_95"
        app:layout_constraintStart_toStartOf="@+id/v_gl_50"
        app:layout_constraintTop_toBottomOf="@id/Notice"/>
</androidx.constraintlayout.widget.ConstraintLayout>